{
  "devDependencies": {
    "cypress": "^12.16.0",
    "cypress-mochawesome-reporter": "^3.2.2",
    "cypress-recurse": "^1.35.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0"
  },
  "scripts": {
    "cy:open": "cypress open --browser chrome",
    "cy:run:qa": "cypress run --env ENV=qa --browser chrome",
    "cy:run:staging": "cypress run --env ENV=staging --browser chrome",
    "cy:run": "cypress run --browser chrome",
    "cleanup": "rm -fr mochawesome-report",
    "merge_reports": "mochawesome-merge --reportDir mochawesome-report > mochawesome-report/output.json",
    "generate_mochawesome_report": "marge mochawesome-report/output.json",
    "e2e_mochawesome": "npm run cleanup; cypress run --env ENV=${env}; npm run merge_reports; npm run generate_mochawesome_report"
  },
  "dependencies": {
    "imapflow": "^1.0.147",
    "mailparser": "^3.6.5"
  }
}
